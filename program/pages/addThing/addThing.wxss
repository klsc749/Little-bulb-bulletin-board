/* pages/addThing/addThing.wxss */
.pageContainer {
  display:flex;
  min-height: 100vh;
  background:-webkit-linear-gradient(bottom,rgba(157, 190, 255,0.7),rgba(254, 217, 255,0.7),rgba(255, 236, 255,0.7)) ;
  flex-direction: column;
  flex-wrap: wrap;
}

.container1 view{
    width: 600rpx;
    height: 90rpx;
    border: #9dbeff 0px solid;
    border-radius: 20rpx;
    margin-left:70rpx ;
}

.receiver{
  display: block;
  height:60rpx;
  width: 600rpx;
  padding-left: 20rpx;
  margin-left: 70rpx;
  margin-top: 50rpx;
  background-color: white;
  color: rgb(102, 102, 102);
  font-weight: 700;
  box-shadow: 0 0 5rpx gray;
}
.deadl {
  display: inline-block;
  height:60rpx;
  width: 600rpx;
  padding-left: 20rpx;
  margin-left: 70rpx;
  margin-top: 30rpx;
  background-color: white;
  color: rgb(102, 102, 102);
  font-weight: 700;
  box-shadow: 0 0 5rpx gray;
}

.thingData{
  width: 600rpx;
  border-radius: 30rpx;
  border-style: groove;
  height: 500rpx;
  margin: 30rpx auto;
  background-color: #fff;
  padding-left: 20rpx;
  padding-top: 20rpx;
  border: #9dbeff 0px solid;
  box-shadow: 0 0 5rpx gray;
}
.sendBtn{
  margin: 30rpx auto;
  height: 50rpx;
  width: 80rpx;
  border-radius: 100rpx;
  position: fixed;
  right: 150rpx;
  bottom: 160rpx;
}
.plusMirror{
  width: 80px;
  height: 160px;
  position: absolute;
  right: 0px;
  top: 0px;
}
.sendBtnImage {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
  position: fixed;
  right: 80rpx;
  bottom: 80rpx;
}

.pick {
  border: 0px solid gray;
  border-radius: 30rpx;
  background-color: rgb(255, 255, 255);
  display: inline-block;
  position: absolute;
  right: 80rpx;
}

.tapeffect {
  background-color: rgb(184, 182, 182);
  color: #fff;
}